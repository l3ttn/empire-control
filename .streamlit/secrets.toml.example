# Empire Control - Exemplo de Configuração de Secrets
# ===================================================
# 
# Este arquivo mostra como configurar o secrets.toml para o Streamlit Cloud.
# 
# INSTRUÇÕES:
# 1. Crie uma conta de serviço no Google Cloud Console:
#    - Acesse https://console.cloud.google.com/
#    - Crie um novo projeto ou selecione um existente
#    - Vá em "APIs & Services" > "Credentials"
#    - Clique em "Create Credentials" > "Service Account"
#    - Dê um nome e clique em "Done"
#    - Clique na conta criada > "Keys" > "Add Key" > "Create new key" > JSON
#    - Baixe o arquivo JSON
# 
# 2. Ative a API do Google Sheets:
#    - Vá em "APIs & Services" > "Library"
#    - Busque "Google Sheets API" e ative
#    - Busque "Google Drive API" e ative
# 
# 3. Crie uma planilha Google Sheets:
#    - Crie uma nova planilha em https://sheets.google.com
#    - Compartilhe com o email da conta de serviço (client_email do JSON)
#    - Dê permissão de "Editor"
#    - Copie a URL da planilha
# 
# 4. Configure no Streamlit Cloud:
#    - Acesse seu app em https://share.streamlit.io
#    - Vá em Settings > Secrets
#    - Cole o conteúdo abaixo (com seus dados reais)
#

# URL da planilha Google Sheets (compartilhe com o email da conta de serviço)
spreadsheet_url = "https://docs.google.com/spreadsheets/d/SEU_SPREADSHEET_ID/edit"

# Credenciais da conta de serviço (cole o conteúdo do arquivo JSON baixado)
[gcp_service_account]
type = "service_account"
project_id = "seu-projeto"
private_key_id = "sua-key-id"
private_key = "-----BEGIN PRIVATE KEY-----\nSUA_CHAVE_PRIVADA_AQUI\n-----END PRIVATE KEY-----\n"
client_email = "sua-conta@seu-projeto.iam.gserviceaccount.com"
client_id = "123456789"
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "https://www.googleapis.com/robot/v1/metadata/x509/sua-conta%40seu-projeto.iam.gserviceaccount.com"

# Usuarios autorizados (usuario = "senha")
[usuarios]
lkz = "lkz10"
nad = "nad10"
